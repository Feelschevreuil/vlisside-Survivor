@model CreationLivreVM

<div class="col-md-6">
    <fieldset class="rounded shadow p-3 m-2 mb-4">
        <legend>
            <img width="30px" src="~/img/account-school.svg" />
        </legend>
        <div class="form-group">
            <label asp-for="Cours" class="form-label"></label>
            <select asp-for="Cours" asp-items="Model.ListeCours" class="form-control" aria-required="true">
                <option>Sélectionner un programme</option>
            </select>
            <span asp-validation-for="Cours" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset class="rounded shadow p-3 m-2 mb-4">
        <legend>
            <img width="30px" src="~/img/account-school.svg" />
        </legend>
        <div class="form-group">
            <label asp-for="Auteur" class="form-label"></label>
            <select asp-for="Auteur" asp-items="Model.Auteurs" class="form-control" aria-required="true">
                <option>Sélectionner un programme</option>
            </select>
            <span asp-validation-for="Auteur" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset class="rounded shadow p-3 m-2 mb-4">
        <legend>
            <img width="30px" src="~/img/account-school.svg" />
        </legend>
        <div class="form-group">
            <label asp-for="Etat" class="form-label"></label>
            <select asp-for="Etat" asp-items="Model.Etats" class="form-control" aria-required="true">
                <option>Sélectionner un programme</option>
            </select>
            <span asp-validation-for="Etat" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset class="rounded shadow p-3 m-2 mb-4">
        <legend>
            <img width="30px" src="~/img/account-school.svg" />
        </legend>
        <div class="form-group">
            <label asp-for="MaisonDedition" class="form-label"></label>
            <select asp-for="MaisonDedition" asp-items="Model.MaisonsDeditions" class="form-control" aria-required="true">
                <option>Sélectionner un programme</option>
            </select>
            <span asp-validation-for="MaisonDedition" class="text-danger"></span>
        </div>
    </fieldset>

    <fieldset class="rounded shadow p-3 m-2 mb-4">
        <legend>
            <img width="30px" src="~/img/google-maps.svg" />
        </legend>
        <div class="form-group">
            <label asp-for="Titre" class="form-label"></label>
            <input asp-for="Titre" class="form-control" aria-required="true" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ISBN" class="form-label"></label>
            <input asp-for="ISBN" class="form-control" aria-required="true" />
            <span asp-validation-for="ISBN" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Resume" class="form-label"></label>
            <input asp-for="Resume" class="form-control" aria-required="true" />
            <span asp-validation-for="Resume" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" class="form-control" aria-required="true" />
            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DatePublication" class="form-label"></label>
            <input asp-for="DatePublication" class="form-control" aria-required="true" />
            <span asp-validation-for="DatePublication" class="text-danger"></span>
        </div>
    </fieldset>
</div>