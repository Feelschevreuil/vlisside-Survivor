@model CreationLivreVM

<div class="row">
    <div class="col-md-8 d-block m-auto">
        <form method="post" class="text-center m-3" asp-action="Creer" asp-controller="Inventaire" enctype="multipart/form-data">

            <img class="d-block m-auto mb-3" width="200px" src="~/img/book-plus.svg" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row text-start">
                <div class="col-md-6">
                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <div class="form-group">
                            <label asp-for="Titre" class="form-label"></label>
                            <input asp-for="Titre" class="form-control" aria-required="true" />
                            <span asp-validation-for="Titre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ISBN" class="form-label"></label>
                            <input asp-for="ISBN" class="form-control" aria-required="true" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Resume" class="form-label"></label>
                            <input asp-for="Resume" class="form-control" aria-required="true" />
                            <span asp-validation-for="Resume" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo" class="form-label"></label>
                            <input type="file" class="form-control" aria-required="true" onchange="getAndShowBase64(this.files[0], 'sendImg', 'viewImg')" />
                            <input asp-for="Photo" class="form-control" aria-required="true" hidden id="sendImg" />
                            <img id="viewImg" class="col-md-6 m-1" />
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DatePublication" class="form-label"></label>
                            <input asp-for="DatePublication" class="form-control" aria-required="true" />
                            <span asp-validation-for="DatePublication" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <div class="form-group">
                            <div class="col-auto">
                                <label class="sr-only" for="inlineFormInputGroup">Prix du livre par état</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Numérique</div>
                                    </div>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">$</div>
                                    </div>
                                    <input asp-for="PrixNumerique" class="form-control" aria-required="true" type="text" placeholder="prix" />
                                    <input asp-for="PossedeNumerique" aria-required="true" type="checkbox" />
                                </div>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Neuf</div>
                                    </div>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">$</div>
                                    </div>
                                    <input asp-for="PrixNeuf" class="form-control" aria-required="true" type="text" placeholder="prix" />
                                    <input asp-for="PossedeNeuf" aria-required="true" type="checkbox" />
                                </div>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">Usagé</div>
                                    </div>
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">$</div>
                                    </div>
                                    <input asp-for="PrixUsage" class="form-control" aria-required="true" type="text" placeholder="prix" />
                                    <input asp-for="QuantiteUsagee" aria-required="true" type="number" placeholder="Quantité" />
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>

                <div class="col-md-6">
                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <div class="form-group">
                            <label asp-for="AuteurId" class="form-label"></label>
                            <select asp-for="AuteurId" asp-items="Model.Auteurs" class="form-control" aria-required="true"></select>
                            <span asp-validation-for="AuteurId" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <div class="form-group">
                            <label asp-for="MaisonDeditionId" class="form-label"></label>
                            <select asp-for="MaisonDeditionId" asp-items="Model.MaisonsDeditions" class="form-control" aria-required="true"></select>
                            <span asp-validation-for="MaisonDeditionId" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <label asp-for="ListeCoursAssocie" class="form-label"></label>
                        
                        <li class="nav-item">
                            <div class="btn-group">
                                <label asp-for="ListeCoursComplete" class="form-label"></label>
                                <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/img/plus-circle.svg" class="icon-modifier">
                                </button>
                                <ul class="dropdown-menu">
                                    @foreach(var cours in Model.ListeCoursComplete){
                                        <li><a class="dropdown-item" onclick="livreAjouteAssocie(@cours.Value)">@cours.Text</a></li>
                                        @*
                                    <li>

                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                              asp-route-returnUrl="/"
                                              method="post">
                                            <button type="submit" class="dropdown-item">Déconnexion</button>
                                        </form>

                                    </li>*@
                                    }
                                </ul>
                            </div>
                        </li>

                        <div>
                            @if(Model.ListeCoursAssocie!=null){
                                foreach(CoursLivre cours in Model.ListeCoursAssocie){
                                    <div>
                                        <input asp-for="ListeCoursAssocie" type="text" readonly class="form-control-plaintext" id="@cours.CoursId" value="@cours.Cours.Nom">
                                        <input asp-for="ListeCoursAssocie" aria-required="true" type="checkbox" value="@cours.Complementaire" />
                                    </div>
                                }
                            }
                        </div>
                    </fieldset>
                </div>

                <div class="m-3 mt-4">
                    <button type="submit" class="btn btn-primary col-md-12 shadow">Creer</button>
                </div>

                @Html.AntiForgeryToken()
            </div>
        </form>
    </div>
</div>