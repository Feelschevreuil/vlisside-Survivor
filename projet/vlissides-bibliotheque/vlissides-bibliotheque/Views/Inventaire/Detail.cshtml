@model LivreDetailVM

@{
    int livreIdCourant = @Model.LivreBibliotheque.LivreId;
}

<p id="pErreur"></p>
<p hidden id="idLivre">@livreIdCourant</p>

<div class="shadow rounded">

    <div class="row mb-3">
        <h1 class="card-title d-flex justify-content-center">@Model.LivreBibliotheque.Titre</h1>
        <div class="col-6 d-flex justify-content-center">
            <img class="img-fluid image-detail" src="@Model.LivreBibliotheque.PhotoCouverture" />
        </div>

        <div class="card-body col-6 mt-auto mb-auto">
            <div class="row me-0">
                <fieldset class="shadow rounded p-3">
                    <p class="card-text"><strong>ISBN:</strong> @Model.LivreBibliotheque.Isbn</p>
                    <p class="card-text"><strong>Programme d'étude:</strong>  @(Model.ProgrammeEtudeNom != null ? Model.ProgrammeEtudeNom : "N/A")</p>
                    <p class="card-text"><strong>Date de publication:</strong> @Model.LivreBibliotheque.DatePublication.ToString("d MMMM yyyy")</p>
                    <p class="card-text"><strong>Description:</strong> @Model.LivreBibliotheque.Resume</p>
                </fieldset>
            </div>
            <div class="row me-0">
                <fieldset class="shadow rounded p-3">
                    <p class="card-text"><strong>Neuf</strong> @Model.LivreBibliotheque.Prix.PrixNeuf$</p>
                    <p class="card-text"><strong>Numérique</strong> @Model.LivreBibliotheque.Prix.PrixNumerique$</p>
                    <p class="card-text"><strong>Usagé</strong> @Model.LivreBibliotheque.Prix.PrixUsager$</p>
                </fieldset>
            </div>
        </div>
    </div>
</div>

<div class="d-flex flex-row-reverse">
    <div class="form-group col-2">
        <label asp-for="Quantite" class="form-label"></label>
        <input asp-for="Quantite" class="form-control" aria-required="true" />
        <span asp-validation-for="Quantite" class="text-danger"></span>
    </div>
</div>

