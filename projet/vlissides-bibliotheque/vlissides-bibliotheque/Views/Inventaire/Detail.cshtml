@model LivreDetailVM

@{
    int livreIdCourant = @Model.LivreBibliotheque.LivreId;
}

    <p id="pErreur"></p>
    <p hidden id="idLivre">@livreIdCourant</p>
    <div class="row mb-3">
        <div class="col-4">
            <img class="img-fluid image-detail" src="@Model.LivreBibliotheque.PhotoCouverture" />
        </div>

        <div class="card-body col-6 mt-auto mb-auto">
            <h5 class="card-title"><strong>Titre:</strong> @Model.LivreBibliotheque.Titre</h5>
            <p class="card-text"><strong>ISBN:</strong> @Model.LivreBibliotheque.Isbn</p>
            @if (Model.ProgrammeEtudeNom != null)
            {
                <p class="card-text"><strong>Programme d'étude:</strong> @Model.ProgrammeEtudeNom</p>
            }
            else
            {
                <p class="card-text"><strong>Programme d'étude:</strong> N/A</p>
            }
            <p class="card-text"><strong>Date de publication:</strong> @Model.LivreBibliotheque.DatePublication</p>
            <p class="card-text"><strong>Description:</strong> @Model.LivreBibliotheque.Resume</p>
        </div>
    </div>


