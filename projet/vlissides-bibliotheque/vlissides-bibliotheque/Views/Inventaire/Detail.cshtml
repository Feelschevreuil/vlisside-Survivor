    <div class="form-group col-2">
    <label asp-for="quantite" class="form-label"></label>
    <input asp-for="quantite" class="form-control" aria-required="true" />
    <span asp-validation-for="quantite" class="text-danger"></span>
    </div>
    </div>*@

    <div class="d-flex flex-row-reverse">
        <div class="form-group col-2" id="ajouter">
            <input class="btn btn-primary mt-4 shadow" type="button" value="Ajouter au panier" onclick="ajouterLivreLocalStorage(@Model.livreBibliotheque.LivreId)" />
        </div>
        <div class="form-group col-2" id="supprimer" hidden>
            <input class="btn btn-danger mt-4 shadow" type="button" value="Supprimer du panier" onclick="supprimerLivreLocalStorage(@Model.livreBibliotheque.LivreId)" />
        </div>
    </div>

</div>

