@model InventaireLivreBibliotheque


<h1>Inventaire de la bibliothèque</h1>

    @if (User.IsInRole(RolesName.Admin))
    {
        <a class="d-flex justify-content-end" asp-controller="inventaire" asp-action="creer">
            <input class="btn btn-primary shadow" type="button" value="Ajouter un livre" />
        </a>
    }

<div class="container-fluid">
    <div class="row">
        @foreach (var card in Model.tuileLivreBiblioteques)
        {
            <partial name="_TuileLivrePartial" model="card"></partial>
        }
    </div>
</div>


<link rel="stylesheet" href="~/css/carte-livre-Partiel.css" asp-append-version="true" />
<script src="~/js/updateBoutonAjoutPanier.js"></script>
<script src="~/js/PrixAjax.js"></script>