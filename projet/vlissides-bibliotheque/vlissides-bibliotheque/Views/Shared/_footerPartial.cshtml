<footer class="position-absolute fixed-bottom" id="bottomNav">
    <div class="text-center bg-top text-light p-1 w-100">
        <span class="d-block" id="copyrightInfo">
            &copy; Tous droits réservés - <img src="~/img/bibliox.png" width="100" height="30" alt=""> - 2022
        </span>
        <div class="d-none" id="bottomNavContent">
            <a class="btn btn-outline-primary text-light border-0" asp-controller="Inventaire" asp-action="Bibliotheque">
                <img src="~/img/town-hall-light.svg" width="25px" class="d-block m-auto"/>
                Bibliothèque
            </a>
            <a class="btn btn-outline-primary text-light border-0" asp-controller="Usage" asp-action="Usage">
                <img src="~/img/handshake-light.svg" width="25px" class="d-block m-auto" />
                Boutique
            </a>
            @if (User.IsInRole(Constante.Admin))
            {
                <a class="btn btn-outline-primary text-light border-0" asp-controller="TableauDeBord" asp-action="Index">
                    <img src="~/img/cog-light.svg" width="25px" class="d-block m-auto" />
                    Gestion
                </a>
            }
        </div>
    </div>
</footer>