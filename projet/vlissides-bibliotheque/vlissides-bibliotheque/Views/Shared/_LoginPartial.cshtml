@using Microsoft.AspNetCore.Identity
@inject SignInManager<Utilisateur> SignInManager
@inject UserManager<Utilisateur> UserManager


<ul class="navbar-nav ms-auto">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn text-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/img/account-cog-light.svg" width="25px">
                </button>
                <ul class="dropdown-menu dropdown-menu-end position-absolute">
                    <li class="dropdown-item">
                        <a class="dropdown-item" asp-controller="GestionProfil" asp-action="Index">Profil</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="dropdown-item" asp-controller="usage" asp-action="MaBoutique">Ma boutique</a>
                    </li>
                    <li class="dropdown-item">
                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                          asp-route-returnUrl="/"
                          method="post">
                            <button type="submit" class="dropdown-item">Déconnexion</button>
                        </form>
                    </li>
                </ul>
            </div>
        </li>
}
else
{
        <li class="nav-item">
            <div class="dropdown">
                <button class="btn text-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="~/img/account-circle-light.svg" width="25px">
                </button>
                <ul class="dropdown-menu dropdown-menu-end position-absolute">
                    <li class="dropdown-item">
                        <a class="nav-link" asp-area="" asp-controller="Connexion" asp-action="Inscription">S'inscrire</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="nav-link" asp-area="" asp-controller="Connexion" asp-action="Index">Se connecter</a>
                    </li>
                </ul>
            </div>
        </li>
}
</ul>


