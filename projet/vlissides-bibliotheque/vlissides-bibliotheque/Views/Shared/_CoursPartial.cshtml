@model CoursVM

<div class="row">
    <div class="col-md-8 d-block ms-auto">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row text-start">
                <div class="col-md-8">
                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <div class="form-group">
                            <label asp-for="Nom" class="form-label"></label>
                            <input asp-for="Nom" class="form-control" aria-required="true" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" class="form-control" aria-required="true" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>  
                        
                        <div class="form-group">
                            <label asp-for="Code" class="form-label"></label>
                            <input asp-for="Code" class="form-control" aria-required="true" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>
                           <div class="form-group">
                            <label asp-for="AnneeParcours" class="form-label"></label>
                            <input asp-for="AnneeParcours" class="form-control" aria-required="true" />
                            <span asp-validation-for="AnneeParcours" class="text-danger"></span>
                        </div>

                    </fieldset>
                </div>
                <div class="col-md-8">

                    <fieldset class="rounded shadow p-3 m-2 mb-4">
                        <div class="form-group">
                            <label asp-for="ProgrammesEtudeId" class="form-label"></label>
                            <select asp-for="ProgrammesEtudeId" id="ProgrammesEtudeId" asp-items="Model.ProgrammesEtude" class="form-control" aria-required="true"></select>
                            <span asp-validation-for="ProgrammesEtudeId" class="text-danger"></span>
                        </div>
                    </fieldset>
                </div>
                @Html.AntiForgeryToken()
            </div>
        </form>
    </div>
</div>