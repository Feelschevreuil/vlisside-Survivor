@model EvaluationLivre

@{
int nbrEtoile = Model.Evaluation.Etoile;
}


<div class="card" style="width:auto">

    <div class="card" style="width:auto">
        <h5 class="card-title">@Model.LivreBibliotheque.Titre</h5>
        <p class="card-text">@Model.LivreBibliotheque.Resume</p>
    </div>
    <img style="width:auto;" src=@Model.LivreBibliotheque.PhotoCouverture alt="PhotoLivre">

    <div class="card-body">

        <div id="rating" class="star-rating" role="img" data-rating="3">

          

            @for (int etoile_vide = 0; etoile_vide< 5; etoile_vide++ ){
                @while (nbrEtoile > 0)
            {
                    if (nbrEtoile >= 2)
                    {
                        nbrEtoile = nbrEtoile - 2;
                        etoile_vide++;
                        <span class="star" data-value="">
                            <img style="width: 0.7rem; margin-top: -3px;" src="/images/etoile-pleine.svg"><span class="star-notification"></span></span>
                    }

                    if(nbrEtoile==1){
                        nbrEtoile = nbrEtoile - 1;
                        etoile_vide++;
                        <span class="star" data-value="">  <img style="width: 0.7rem; margin-top: -3px;" src="/images/demi-etoile.svg"> <span class="star-notification"></span></span>

                    }
            }


                <span class="star" data-value="">
                    <img style="width: 0.7rem; margin-top: -3px;" src="/images/etoile-vide.svg"><span class="star-notification"></span>
                </span>
            }
            <p class="d-inline-block">Prix: 1234$</p>
        </div>


          
        
        
      
    </div>
</div>
