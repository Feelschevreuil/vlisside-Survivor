@model TuileLivreBibliotequeVM

@{
    int nbrEtoile = Model.livreBibliothequesEvaluation.Evaluation.Etoiles;
}


<div class="card border-2" style="width:auto">
    
    <div class="position-relative text-center">
        <img class="mx-auto image-livre" src=@Model.livreBibliothequesEvaluation.LivreBibliotheque.PhotoCouverture alt="PhotoLivre">
        <div class="prix rounded-circle shadow">
            <p class="pt-3">100.99$</p>
        </div>
    </div>

    <div class="pt-2 w-50">
        <select class="form-select form-select-sm" aria-label="État d'un livre">
            <option selected value="Neuf">Neuf</option>
            <option value="Usagé">Usagé</option>
            <option value="Numérique">Numérique</option>
        </select>
    </div>


    <div class="card border-0" style="width:auto">
        <h5 class="card-title ">@Model.livreBibliothequesEvaluation.LivreBibliotheque.Titre</h5>
        <p class="card-text">@Model.livreBibliothequesEvaluation.LivreBibliotheque.Isbn</p>
        <p class="card-text">@Model.coursProfesseurs[0].Cours.Nom</p>
        <p class="card-text">@Model.coursProfesseurs[0].Professeur.Prenom @Model.coursProfesseurs[1].Professeur.Nom</p>
        <p class="card-text">@Model.livreBibliothequesEvaluation.LivreBibliotheque.DatePublication.Year</p>
        <p class="card-text">Année de parcours: @Model.coursProfesseurs[0].Cours.AnneeParcours</p>
    </div>

    <footer>
        <div class="card-body">

            <div id="rating" class="star-rating" role="img" data-rating="3">



                @for (int etoile_vide = 0; etoile_vide < 5; etoile_vide++)
                {
                    @while (nbrEtoile > 0)
                    {
                        if (nbrEtoile >= 2)
                        {
                            nbrEtoile = nbrEtoile - 2;
                            etoile_vide++;
                            <span class="star" data-value="">
                                <img style="width: 0.7rem; margin-top: -3px;" src="~/img/etoile-pleine.svg">
                                <span class="star-notification"></span>
                            </span>
                        }

                        if (nbrEtoile == 1)
                        {
                            nbrEtoile = nbrEtoile - 1;
                            etoile_vide++;
                            <span class="star" data-value="">
                                <img style="width: 0.7rem; margin-top: -3px;" src="~/img/demi-etoile.svg">
                                <span class="star-notification"></span>
                            </span>

                        }
                    }

                    if (etoile_vide != 5)
                    {
                        <span class="star" data-value="">
                            <img style="width: 0.7rem; margin-top: -3px;" src="~/img/etoile-vide.svg">
                            <span class="star-notification"></span>
                        </span>
                    }
                }
            </div>
        </div>
    </footer>
</div>

<link rel="stylesheet" href="~/css/carte-livre-Partiel.css" asp-append-version="true" />