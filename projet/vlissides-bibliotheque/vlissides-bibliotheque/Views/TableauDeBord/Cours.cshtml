@model List<Cours>

<div class="d-flex accordion-header">
    <a asp-area="" asp-controller="TableauDeBord" asp-action="Index">
        <img class="fleche-retour" src="~/img/fleche-de-retour.svg" />
    </a>
    <h2 class="p-3">Gestion des cours</h2>
</div>

<table class="table table-light table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(cours => cours.First().Code)</th>
            <th>@Html.DisplayNameFor(cours => cours.First().Nom)</th>
            <th>@Html.DisplayNameFor(cours => cours.First().Description)</th>
            <th>@Html.DisplayNameFor(cours => cours.First().ProgrammeEtude.Nom)</th>
            <th>@Html.DisplayNameFor(cours => cours.First().AnneeParcours)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Cours cours in Model) {
            <tr>
                <td>@cours.Code</td>
                <td>@cours.Nom</td>
                <td>@cours.Description</td>
                <td>@cours.ProgrammeEtude.Nom</td>
                <td>@cours.AnneeParcours</td>
                <td>
                    <img src="~/img/pencil.svg" width="25px" data-bs-toggle="modal" data-bs-target="#cours-@cours.CoursId">
                    <img src="~/img/delete.svg" width="25px">
                </td>
            </tr>
            <div class="modal fade" id="cours-@cours.CoursId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Modifier le cours</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            contenu
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="button" class="btn btn-primary">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>