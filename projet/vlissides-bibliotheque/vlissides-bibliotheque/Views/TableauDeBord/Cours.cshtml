@model List<CoursVM>


<div class="row">
    <h2 class="p-3 ps-0 col-10">Gestion des cours</h2>
    <div class="col-2 d-flex justify-content-end">
        <img src="~/img/plus-circle.svg" class="btn-img-hover devant" data-bs-toggle="modal" data-bs-target="#creer" onclick="getTBFormulaireCreerCours()" />
    </div>
</div>


<div>
    <table class="table table-light">
        <thead>
            <tr>
                <th id="@nameof(AjoutEditCoursVM.Code)">@Html.DisplayNameFor(cours => cours.First().Code)</th>
                <th id="@nameof(AjoutEditCoursVM.Nom)">@Html.DisplayNameFor(cours => cours.First().Nom)</th>
                <th id="@nameof(AjoutEditCoursVM.AnneeParcours)">@Html.DisplayNameFor(cours => cours.First().AnneeParcours)</th>
                <th id="@nameof(AjoutEditCoursVM.ProgrammeEtude)">@Html.DisplayNameFor(cours => cours.First().ProgrammeEtudeNom)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (CoursVM cours in Model)
            {
                <tr id="tr-@cours.Id" class="modif-suppr">

                    <td>@cours.Code</td>
                    <td>@cours.Nom</td>
                    <td>@cours.AnneeParcours</td>
                    <td>@cours.ProgrammeEtudeNom</td>
                    <td class="options-ligne position-absolute text-center vw-100 start-0 bg-transparent border-0">
                        <img src="~/img/pencil.svg" class="btn-img-hover" data-bs-toggle="modal" data-bs-target="#modal-modifier" onclick="getTBFormulaireModifierCours('@cours.Id')">
                        <img src="~/img/delete.svg" class="btn-img-hover" onclick="supprimerCours('@cours.Id')">
                    </td>
                </tr>
            }
            <div class="modal fade" id="modal-modifier" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-md">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Modifier le cours</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button id="fermer-modal-modifier" data-bs-dismiss="modal" hidden></button>
                            <button type="button" class="btn btn-primary" onclick="TBModifierCours()">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>


            <div class="modal fade" id="creer" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Nouveau cours</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button id="fermer-modal-creer" data-bs-dismiss="modal" hidden></button>
                            <button type="button" class="btn btn-primary" onclick="TBCreerCours()">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>
        </tbody>
    </table>
</div>