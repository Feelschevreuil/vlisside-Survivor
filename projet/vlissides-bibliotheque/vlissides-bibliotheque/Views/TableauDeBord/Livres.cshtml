@model List<LivreBibliotheque>

<div class="d-flex accordion-header">
    <a asp-area="" asp-controller="TableauDeBord" asp-action="Index">
        <img class="btn-img-hover" src="~/img/fleche-de-retour.svg" />
    </a>
    <h2 class="p-3">Gestion des livres de bibliothèque</h2>
</div>

<img src="~/img/plus-circle.svg" class="position-fixed bottom-0 end-0 me-5 mb-4 btn-img-hover devant" data-bs-toggle="modal" data-bs-target="#creer" onclick="getFormulaireCreerLivre()" />

<div style="overflow-x: auto;">
    <table class="table table-light">
        <thead>
            <tr>
                <th id="@nameof(LivreEtudiantVM.PhotoCouverture)">@Html.DisplayNameFor(livre => livre.First().PhotoCouverture)</th>
                <th id="@nameof(LivreEtudiantVM.Isbn)">@Html.DisplayNameFor(livre => livre.First().Isbn)</th>
                <th id="@nameof(LivreEtudiantVM.Titre)">@Html.DisplayNameFor(livre => livre.First().Titre)</th>
                <th id="@nameof(LivreEtudiantVM.Resume)">@Html.DisplayNameFor(livre => livre.First().Resume)</th>
                <th id="@nameof(LivreEtudiantVM.DatePublication)">@Html.DisplayNameFor(livre => livre.First().DatePublication)</th>
                <th id="@nameof(LivreEtudiantVM.MaisonEdition)">@Html.DisplayNameFor(livre => livre.First().MaisonEdition.Nom)</th>
            </tr>
        </thead>
        <tbody>
            @foreach(LivreBibliotheque livre in Model) {
                <tr id="tr-@livre.LivreId" class="modif-suppr">
                    <td class="text-center">
                        <img src="@livre.PhotoCouverture" width="40px">
                    </td>
                    <td>@livre.Isbn</td>
                    <td>@livre.Titre</td>
                    <td>@livre.Resume</td>
                    <td>@livre.DatePublication</td>
                    <td>@livre.MaisonEdition.Nom</td>
                    <td class="options-ligne position-absolute text-center vw-100 start-0 bg-transparent border-0">
                        <img src="~/img/pencil.svg" class="btn-img-hover" data-bs-toggle="modal" data-bs-target="#livre-@livre.LivreId" onclick="getFormulaireModifierLivre('@livre.LivreId')">
                        <img src="~/img/delete.svg" class="btn-img-hover" onclick="supprimerLivre('@livre.LivreId')">
                    </td>
                </tr>
                <div class="modal fade" id="livre-@livre.LivreId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="staticBackdropLabel">Modifier le livre</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                contenu
                            </div>
                            <div class="modal-footer">
                                <button id="fermer-modal-@livre.LivreId" data-bs-dismiss="modal" hidden></button>
                                <button onclick="modifierLivre('@livre.LivreId')" type="button" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="modal fade" id="creer" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Nouveau livre</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                        </div>
                        <div class="modal-footer">
                            <button id="fermer-modal-creer" data-bs-dismiss="modal" hidden></button>
                            <button type="button" class="btn btn-primary" onclick="creerLivre()">Enregistrer</button>
                        </div>
                    </div>
                </div>
            </div>
        </tbody>
    </table>
</div>