@model List<Etudiant>

<div class="d-flex accordion-header">
    <a asp-area="" asp-controller="TableauDeBord" asp-action="Index">
        <img class="fleche-retour" src="~/img/fleche-de-retour.svg" />
    </a>
    <h2 class="p-3">Gestion des étudiants</h2>
</div>

<table class="table table-light table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Nom)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Prenom)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Email)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().ProgrammeEtude.Nom)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Adresse.NumeroCivique)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Adresse.App)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Adresse.Rue)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Adresse.Ville)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Adresse.Province.Nom)</th>
            <th>@Html.DisplayNameFor(etudiant => etudiant.First().Adresse.CodePostal)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Etudiant etudiant in Model) {
            <tr>
                <td>@etudiant.Nom</td>
                <td>@etudiant.Prenom</td>
                <td>@etudiant.Email</td>
                <td>@etudiant.ProgrammeEtude.Nom</td>
                <td>@etudiant.PhoneNumber</td>
                <td>@etudiant.Adresse.NumeroCivique</td>
                <td>@etudiant.Adresse.App</td>
                <td>@etudiant.Adresse.Rue</td>
                <td>@etudiant.Adresse.Ville</td>
                <td>@etudiant.Adresse.Province.Nom</td>
                <td>@etudiant.Adresse.CodePostal</td>
                <td>
                    <img src="~/img/pencil.svg" width="25px" data-bs-toggle="modal" data-bs-target="#etudiant-@etudiant.Id">
                    <img src="~/img/delete.svg" width="25px">
                </td>
            </tr>
            <div class="modal fade" id="etudiant-@etudiant.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Modifier l'étudiant</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form class="text-center m-3" method="post" asp-action="Index" asp-controller="GestionProfil">
                            <div class="modal-body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="row text-start">

                                    <div class="col-md-6">
                                        <fieldset class="rounded shadow p-3 m-2 mb-4">
                                            <legend>
                                                <img width="30px" src="~/img/account-circle.svg" />
                                            </legend>
                                            <br />
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Email" class="form-label"></label>
                                                <input asp-for="@etudiant.Email" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Email" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Nom" class="form-label"></label>
                                                <input asp-for="@etudiant.Nom" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Nom" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Prenom" class="form-label"></label>
                                                <input asp-for="@etudiant.Prenom" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Prenom" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.PhoneNumber" class="form-label"></label>
                                                <input type="text" value="@etudiant.PhoneNumber" class="form-control" aria-required="true" oninput="setPhoneNumber(this, 'phoneNumber')" />
                                                <input asp-for="@etudiant.PhoneNumber" id="phoneNumber" hidden />
                                                <span asp-validation-for="@etudiant.PhoneNumber" class="text-danger"></span>
                                            </div>
                                        </fieldset>

                                        <fieldset class="rounded shadow p-3 m-2 mb-4">
                                            <legend>
                                                <img width="30px" src="~/img/account-school.svg" />
                                            </legend>
                                            @*<div class="form-group">
                                                <label asp-for="@etudiant.ProgrammeEtudeId" class="form-label"></label>
                                                <select asp-for="@etudiant.ProgrammeEtudeId" asp-items="Model.ProgrammeEtudes" class="form-control" aria-required="true">
                                                    <option>Sélectionner un programme</option>
                                                </select>
                                                <span asp-validation-for="ProgrammeEtudeId" class="text-danger"></span>
                                            </div>*@
                                        </fieldset>
                                    </div>

                                    <div class="col-md-6">
                                        <fieldset class="rounded shadow p-3 m-2 mb-4">
                                            <legend>
                                                <img width="30px" src="~/img/google-maps.svg" />
                                            </legend>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Adresse.NumeroCivique" class="form-label"></label>
                                                <input asp-for="@etudiant.Adresse.NumeroCivique" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Adresse.NumeroCivique" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Adresse.App" class="form-label"></label>
                                                <input asp-for="@etudiant.Adresse.App" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Adresse.App" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Adresse.Rue" class="form-label"></label>
                                                <input asp-for="@etudiant.Adresse.Rue" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Adresse.Rue" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Adresse.Ville" class="form-label"></label>
                                                <input asp-for="@etudiant.Adresse.Ville" class="form-control" aria-required="true" />
                                                <span asp-validation-for="@etudiant.Adresse.Ville" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="@etudiant.Adresse.CodePostal" class="form-label"></label>
                                                <input type="text" value="@etudiant.Adresse.CodePostal" class="form-control" aria-required="true" oninput="setPostalCode(this, 'postalCode')" />
                                                <input asp-for="@etudiant.Adresse.CodePostal" id="postalCode" hidden />
                                                <span asp-validation-for="@etudiant.Adresse.CodePostal" class="text-danger"></span>
                                            </div>
                                            @*<div class="form-group">
                                                <label asp-for="ProvinceId" class="form-label"></label>
                                                <select asp-for="ProvinceId" asp-items="Model.Provinces" class="form-control" aria-required="true">
                                                    <option>Sélectionner une province</option>
                                                </select>
                                                <span asp-validation-for="ProvinceId" class="text-danger"></span>
                                            </div>*@
                                        </fieldset>
                                    </div>
                                </div>
                                @Html.AntiForgeryToken()
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>